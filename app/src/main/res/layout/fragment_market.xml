<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/market_top_bg"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:background="@drawable/market_bottom_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/market_edit_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:src="@mipmap/market_edit_bg"
        app:layout_constraintBottom_toBottomOf="@id/market_top_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/market_top_bg"/>


    <ImageView
        android:id="@+id/market_edit_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:src="@mipmap/market_edit_search"
        app:layout_constraintBottom_toBottomOf="@+id/market_edit_bg"
        app:layout_constraintRight_toRightOf="@+id/market_edit_bg"
        app:layout_constraintTop_toTopOf="@+id/market_edit_bg"/>

    <ImageView
        android:id="@+id/market_edit_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:src="@mipmap/market_edit_tip"
        app:layout_constraintBottom_toBottomOf="@+id/market_edit_bg"
        app:layout_constraintLeft_toLeftOf="@+id/market_edit_bg"
        app:layout_constraintTop_toTopOf="@+id/market_edit_bg"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/market_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@id/market_top_bg"
        app:layout_constraintLeft_toRightOf="@+id/market_edit_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/market_top_bg">

    </android.support.v7.widget.RecyclerView>

    <GridView
        android:id="@+id/fragment_market_grid_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:numColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/market_top_bg"/>
</android.support.constraint.ConstraintLayout>