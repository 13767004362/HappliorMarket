<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_title_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg">

    <ImageView
        android:id="@+id/base_title_back_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/back_img"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/base_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size"/>
    <ImageView
        android:id="@+id/base_title_right_img"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40"
        android:src="@mipmap/back_img"
        android:paddingLeft="@dimen/space_5"
        android:paddingRight="@dimen/space_5"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/title_bottom_line"/>
</RelativeLayout>